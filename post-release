#!/bin/bash
APP="$1"; IMAGE="app/$APP"; NAME=$(< /dev/urandom tr -dc A-Za-z0-9 | head -c 16)

set -e

ID=$(docker run -d $IMAGE cat /app/.provisioning)
if [ $(docker wait $ID) -eq 0 ]; then
    echo "-----> Provisionning ..."
    docker run -name=$NAME $IMAGE /bin/bash /app/.provisioning
    docker commit $NAME $IMAGE > /dev/null
fi
